                android:textStyle="bold"
                android:textAlignment="center"
                android:text="@string/declareClass">
            </TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/felsorolas01"
