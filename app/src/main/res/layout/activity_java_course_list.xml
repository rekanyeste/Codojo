<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".JavaCourseListActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textJava"
                android:text="@string/javaCourses"
                android:fontFamily="@font/aldrich"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:textAlignment="center"
                android:layout_marginTop="30sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/introJava"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textJava"
                android:layout_marginTop="10sp"
                android:layout_marginStart="110sp"
                android:layout_marginEnd="110sp"
                android:fontFamily="@font/aldrich"
                android:text="@string/intro"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/variablesJava"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/introJava"
                android:layout_marginStart="125sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="125sp"
                android:fontFamily="@font/aldrich"
                android:foreground="@drawable/iconbookmini"
                android:foregroundGravity="left|center"
                android:text="@string/variJava"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/varQuizJava"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/variablesJava"
                android:layout_marginStart="105sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="105sp"
                android:fontFamily="@font/aldrich"
                android:foreground="@drawable/iconquestion"
                android:foregroundGravity="left|center"
                android:text="@string/quizVariables"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/operatorsJava"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/varQuizJava"
                android:layout_marginStart="110sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="110sp"
                android:fontFamily="@font/aldrich"
                android:foreground="@drawable/iconbookmini"
                android:foregroundGravity="left|center"
                android:text="@string/operatorsJava"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/operatorQuizJava"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/operatorsJava"
                android:layout_marginStart="85sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="85sp"
                android:fontFamily="@font/aldrich"
                android:foreground="@drawable/iconquestion"
                android:foregroundGravity="left|center"
                android:text="@string/operatorsQuiz"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/controlsJava"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/operatorQuizJava"
                android:layout_marginStart="70sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="70sp"
                android:fontFamily="@font/aldrich"
                android:foreground="@drawable/iconbookmini"
                android:foregroundGravity="left|center"
                android:text="@string/controls"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/controlsQuizJava"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/controlsJava"
                android:layout_marginStart="45sp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="45sp"
                android:fontFamily="@font/aldrich"
                android:foreground="@drawable/iconquestion"
                android:foregroundGravity="left|center"
                android:text="@string/controlsQuiz"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/arraysJava"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/controlsQuizJava"
                android:layout_marginStart="100sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="100sp"
                android:fontFamily="@font/aldrich"
                android:foreground="@drawable/iconbookmini"
                android:foregroundGravity="left|center"
                android:text="@string/arrays"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/arraysQuizJava"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/arraysJava"
                android:layout_marginStart="80sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="80sp"
                android:fontFamily="@font/aldrich"
                android:foreground="@drawable/iconquestion"
                android:foregroundGravity="left|center"
                android:text="@string/arraysQuiz"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/methodsJava"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/arraysQuizJava"
                android:layout_marginStart="115sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="115sp"
                android:fontFamily="@font/aldrich"
                android:foreground="@drawable/iconbookmini"
                android:foregroundGravity="left|center"
                android:text="@string/methods"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/methodsQuizJava"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/methodsJava"
                android:layout_marginStart="95sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="95sp"
                android:fontFamily="@font/aldrich"
                android:foreground="@drawable/iconquestion"
                android:foregroundGravity="left|center"
                android:text="@string/methodsQuiz"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/classesJava"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/methodsQuizJava"
                android:layout_marginStart="125sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="125sp"
                android:fontFamily="@font/aldrich"
                android:foreground="@drawable/iconbookmini"
                android:foregroundGravity="left|center"
                android:text="@string/classes"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/typeJava"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/classesJava"
                android:layout_marginStart="90sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="90sp"
                android:fontFamily="@font/aldrich"
                android:foreground="@drawable/iconbookmini"
                android:foregroundGravity="left|center"
                android:text="@string/type"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/finalQuizJava"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/typeJava"
                android:layout_marginStart="65sp"
                android:layout_marginTop="20sp"
                android:layout_marginEnd="65sp"
                android:fontFamily="@font/aldrich"
                android:foreground="@drawable/iconquestion"
                android:foregroundGravity="left|center"
                android:text="@string/finalQuiz"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="22sp" />

            <Button
                android:id="@+id/backToHome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/finalQuizJava"
                android:layout_marginStart="240sp"
                android:layout_marginTop="20sp"
                android:layout_marginEnd="40sp"
                android:fontFamily="@font/aldrich"
                android:foregroundGravity="center"
                android:text="@string/home"
                android:textColor="@color/white"
                app:icon="@drawable/homepage" />

            <Button
                android:id="@+id/backToCourses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/finalQuizJava"
                android:layout_marginStart="40sp"
                android:layout_marginTop="20sp"
                android:layout_marginEnd="240sp"
                android:fontFamily="@font/aldrich"
                android:foregroundGravity="center"
                android:text="@string/backCourse"
                android:textColor="@color/white"
                app:icon="?attr/actionModeCloseDrawable" />
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>