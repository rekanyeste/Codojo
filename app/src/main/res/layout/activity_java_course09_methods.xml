            <Button
                android:id="@+id/btnBackJavaCourseList09"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/felsorolas14"
                android:layout_marginStart="40sp"
                android:layout_marginTop="20sp"
                android:layout_marginEnd="250sp"
                android:fontFamily="@font/aldrich"
                android:text="@string/backToJavaCourseList"
                android:textColor="@color/white"
                app:icon="?attr/homeAsUpIndicator" />

            <Button
                android:id="@+id/btnNextCourseJava09"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@+id/felsorolas14"
                android:layout_marginStart="180sp"
                android:layout_marginTop="20sp"
                android:layout_marginEnd="40sp"
                android:fontFamily="@font/aldrich"
                android:text="@string/methodsQuiz"
                android:textColor="@color/white"
                app:icon="@drawable/iconnext" />
